<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#caf0f8">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense Tracker"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="#03045e" />

    <!-- Input Fields -->
    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Expense Amount"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:background="@xml/edit_text_background"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Category"
        android:padding="10dp"
        android:background="@xml/edit_text_background"
        android:layout_marginBottom="8dp" />

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:backgroundTint="#023e8a"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Total Spending TextView -->
    <TextView
        android:id="@+id/tvTotalSpending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Spending: â‚¹0.0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#333333" />

    <!-- Timeframe Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:backgroundTint="#0077b6"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:backgroundTint="#0077b6"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:backgroundTint="#0077b6"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Expense List -->
    <ListView
        android:id="@+id/lvExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ade8f4"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
